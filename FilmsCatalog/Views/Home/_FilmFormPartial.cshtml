@model FilmCreateEdit

<div asp-validation-summary="ModelOnly" class="text-danger"></div>


<div class="form-group">
	<label asp-for="Title" class="control-label mb-10 text-left"></label>
	<input asp-for="Title" required class="form-control title" />
	<span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group">
	<label asp-for="Description" class="control-label mb-10 text-left"></label>
	<textarea asp-for="Description" class="form-control"></textarea>
	<span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
	<label asp-for="Producer" class="control-label mb-10 text-left"></label>
	<input asp-for="Producer" required class="form-control title" />
	<span asp-validation-for="Producer" class="text-danger"></span>
</div>

<div class="form-group">
	<label asp-for="ReleaseYear" class="control-label mb-10 text-left"></label>
	<input name="ReleaseYear" value="@(Model.ReleaseYear != 0 ? Model.ReleaseYear : null)" type="text" required class="releaseYear form-control title" />
	<span asp-validation-for="ReleaseYear" class="text-danger"></span>
</div>

<div class="form-group">
	<label asp-for="PosterPathUpload" class="control-label mb-10 text-left"></label>
	@if (!string.IsNullOrWhiteSpace(Model.PosterPath))
	{
		<div>
			<img style="max-height:250px" src="@Model.PosterPath" id="posterImg" />
		</div>
	}
	<input id="posterInput" asp-for="PosterPathUpload" class="form-control" />
	<span asp-validation-for="PosterPathUpload" class="text-danger"></span>
</div>

<input asp-for="OwnerId" type="hidden">